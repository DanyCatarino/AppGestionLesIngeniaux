{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Gestion Des Ateliers</h1>
    </div>
    <div class="col text-center">
        <a href="{{path('addAtelier')}}" type="button" class="btn btn-link">Ajouter un Atelier</button></a>
    </div>
    <div class="table-responsive-sm">
    <table class="table table-bordered">
    <thead class="thead-dark">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Description</th>
        <th scope="col">Statut</th>
        <th scope="col">Type</th>
        <th scope="col">Prix</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <tr>
    {%for atelier in lesAteliers%}
        <th scope="row">{{atelier.id}}</th>
        <td>{{atelier.description}}</td>
        <td>{{atelier.statut}}</td>
        <td>{{atelier.type}}</td>
        <td>{{atelier.prix}}</td>
        <td><a class="btn btn-danger" href="{{path('delAtelier',{'id': atelier.id})}}">Supprimer</a></td>
    </tr>
    </div>
    {%endfor%}
</div>
{% endblock %}