{% extends 'base.html.twig' %}

{% block body %}

<style>
  .example-wrapper { margin: 2em auto; max-width: 850px; width: 95%; font: 18px/1.5 sans-serif; }
  .example-wrapper code { background: #FFFFFF; padding: 2px 6px; }
  .error {color: red}
</style>

<div class="jumbotron text-center p-4">
  <h1 class="display-4">Liste des animateurs</h1>
</div>
<div class="example-wrapper">
<div class="container">
    <div class="row">
        <div class="col text-center">
          <a class="btn btn-primary text-center" href="{{path('addAnimateur')}}">Ajouter un animateur</a>
        </div>
    </div><br/>
    <div class="table-responsive-sm">
      <table class="table">
        <thead class="thead-dark">
          <tr>
              <th scope="col">Id</th>
              <th scope="col">Nom</th>
              <th scope="col">Prénom</th>
              <th scope="col">Email</th>
              <th scope="col">Téléphone</th>
              <th scope="col">Documentations</th>
              <th scope="col"></th>
              <th scope="col"></th>
              <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          {% for animateur in allAnimateurs %}
          <tr>
              <th scope="row">{{animateur.id}}</th>
              <td>{{animateur.nom}}</td>
              <td>{{animateur.prenom}}</td>
              <td>{{animateur.emailContact}}</td>
              <td>{{animateur.telephone}}</td>
              <td>{{animateur.documentationDisponible}}</td>
              <td><a class="btn btn-danger" href="{{path('delAnimateur', {'id' : animateur.id})}}">Supprimer</a></br></td>
              <td><a class="btn btn-primary" href="{{path('editAnimateur',{'id' :animateur.id})}}">Modifier</a></br></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div> 
{% endblock %} 