{% extends 'base.html.twig' %}

{% block title %}!{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
     <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Gestion Des canaux</h1>
    </div>
    <div class="col text-center">
        <a href="{{path('addCanal')}}" type="button" class="btn btn-primary">Ajouter un canal</button></a>
    </div>
    <div class="table-responsive-sm">
    <table class="table table-bordered">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Nom</th>
        <th scope="col">Url</th>
        <th scope="col"></th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <tr>
    {%for canal in lesCanaux%}
        <th scope="row">{{canal.id}}</th>
        <td>{{canal.nomCanal}}</td>
        <td>{{canal.urlCanal}}</td>
        <td><a class="btn btn-danger" href="{{path('delCanal',{'id': canal.id})}}">Supprimer</a></td>
        <td><a class="btn btn-info">Modifier</a></td>
    </tr>
    {%endfor%}
</div>

{% endblock %}